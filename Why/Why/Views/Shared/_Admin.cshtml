<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Why</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/chat.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Admin.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Why_Did_S.I.H._Die</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav">
                    </ul>
                </div>
                <div class="justify-content-end">
                    <ul class="navbar-nav ">

                        @if (ViewBag.userCount != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white btn btn-primary" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white btn btn-primary" asp-area="" asp-controller="Login" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        <div id="responsive-admin-menu">
            <div id="responsive-menu">
                <div class="menuicon">≡</div>
            </div>

            <div id="logo"></div>

            <!--Menu-->
            <div id="menu">

                @if (ViewBag.userCount != null)
                {
                    <a title="Biography" asp-controller="Admin" asp-action="Create" asp-route-id=""><span> Create </span></a>

                }


            </div>
            <!--Menu-->


        </div>
        <div id="content-wrapper">
            @RenderBody()
        </div>


    </main>


    <footer class="border-top footer text-muted">
        <div class="privacy">
            &copy; 2022 - Why_Did_S.I.H._Die - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="/js/Chat.js"></script>
    <script src="~/js/admın.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false);
</body>
</html>
